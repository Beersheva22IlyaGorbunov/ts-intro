{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ES2015", "DOM"],
    "target": "ES5"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}